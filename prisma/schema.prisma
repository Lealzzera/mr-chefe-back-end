generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  name        String
  email       String      @unique
  password    String
  cpf         String?
  phoneNumber String?     @unique
  stores      UserStore[]
  ownedStores Store[]

  @@map("users")
}

model Store {
  id           Int         @id @default(autoincrement())
  name         String
  street       String
  neighborhood String
  city         String
  state        String
  cep          String
  users        UserStore[]
  owner        User        @relation(fields: [ownerId], references: [id])
  ownerId      String

  @@map("stores")
}

model UserStore {
  userId  String
  storeId Int
  role    Role   @default(USER)
  user    User   @relation(fields: [userId], references: [id])
  store   Store  @relation(fields: [storeId], references: [id])

  @@id([userId, storeId])
  @@map("userStore")
}

enum Role {
  MANAGER
  USER
}
